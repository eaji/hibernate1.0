<hibernate-mapping>
   <class name="com.exist.model.Person" table="PERSON">
      <meta attribute="class-description">
         This class contains the person details.
      </meta>
      <id name="id" type="int" column="id">
         <generator class="identity"/>
      </id>
      <property name="lastName" column="last_name" type="string"/>
      <property name="firstName" column="first_name" type="string"/>
      <property name="middleName" column="middle_name" type="string"/>
      <many-to-one name="address" column="address_id" unique="true" class="com.exist.model.Address" not-null="true" cascade="all"/>
      <property name="birthdate" column="birthdate" type="date"/>
	   <property name="gwa" column="gwa" type="float"/>
      <property name="dateHired" column="date_hired" type="date"/>
      <property name="employed" column="employed" type="boolean"/>
   	<set name="contacts" cascade="all">
   		<key column="person_id"/>
   		<one-to-many class="com.exist.model.Contact"/>
   	</set>
   </class>

   <class name="com.exist.model.Address" table="ADDRESS">
      <meta attribute="class-description">
         This class contains the address details. 
      </meta>
      <id name="id" type="int" column="id">
         <generator class="identity"/>
      </id>
      <property name="streetNumber" column="street_number" type="string"/>
      <property name="barangay" column="barangay" type="string"/>
      <property name="city" column="city" type="string"/>
      <property name="zipCode" column="zip_code" type="string"/>
   </class>

   <class name="com.exist.model.Contact" table="CONTACT">
      <meta attribute="class-description">
         This class contains the contact details. 
      </meta>   
      <id name="id" column="id" type="int">
      <generator class="identity"/>
      </id>
      <property name="contactType" column="contact_type">
         <type name="org.hibernate.type.EnumType">
            <param name="enumClass">com.exist.model.ContactType</param>
         </type>
      </property>
      <property name="value" column="value" type="string"/>
    </class>
</hibernate-mapping>












